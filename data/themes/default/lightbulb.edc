group
{
	name: "widget/sensor/lightbulb/icon";
    min: 32 32;

	images
	{
		image: "lightbulb_icon.png" COMP;
	}

    parts
	{
      	part
      	{
			type: IMAGE;
            description
            {
               	aspect: 1 1;
               	aspect_preference: BOTH;
            	state: "default" 0;
		   		image.normal: "lightbulb_icon.png";
            }
         }
	}
}/*group widget/sensor/lightbulb/icon*/




group
{
	name: "widget/sensor/lightbulb";
	min: 110 100;
 	max: 110 100;

	data
	{
		item: "description" "Light bulb sensor can be used to show binary value like enable/disable true/false. Ideally you can use it with light bulb or lamp.";
		item: "tags" "switch,binary,light";
	}

	images
	{
		image: "lightbulb_off.png" COMP;
		image: "lightbulb_on.png" COMP;
	}

	parts
	{
	   part
        {
            name: "whole";
            type: RECT;
            mouse_events: 0;
            description
            {
                state: "default" 0.0;
            }
        }/*whole*/

		part
       	{
			name: "base";
            type: IMAGE;

				description
				{
                    state: "LOW" 0.0;
                    image.normal: "lightbulb_off.png";
					aspect: 1 1;
					aspect_preference: BOTH;
                    rel1.relative: 0.20 0.00;
                    rel2.relative: 0.80 0.70;
                }
		        description
		        {
		            state: "HIGH" 0.0;
                    image.normal: "lightbulb_on.png";
					aspect: 1 1;
					aspect_preference: BOTH;
                    rel1.relative: 0.20 0.00;
                    rel2.relative: 0.80 0.70;
                    color: 255 255 255 250;
		        }
		}/*base*/

        part
        {
            name: "separator";
            mouse_events: 0;
            clip_to: "whole";
            description
            {
                state: "default" 0.0;
                rel1.relative: 0.2 0.69;
                rel2.relative: 0.8 0.69;
                rel2.offset: 0 3;
                image.normal: "division_line.png";
            }
        }/*separator*/

        part
        {
            name: "title.text";
            type: TEXT;
            effect: SOFT_SHADOW;
            mouse_events: 1;
            clip_to: "whole";
            description
            {
                state: "default" 0.0;
                rel1.relative: 0.0 0.85;
                rel2.relative: 1.0 1.0;
                text
                {
                    text: "sensor";
                    font: "Sans,Edje-Vera";
                    size: 12;
                    min: 1 1;
                    align: 0.5 0.5;
                }
            }
        }/*title.text*/
		part
		{
            name: "update";
            type: IMAGE;
            clip_to: "whole";
			description
            {
               	state: "default" 0.0;
				max: 34 34;
               	aspect_preference: BOTH;
	           	image.normal: "updated.png";
               	visible: 0;
			}
           	description
            {
               	state: "show" 0.0;
                inherit: "default";
               	visible: 1;
               	color: 0 0 0 0;
            }
		}/*update*/

            part
            {
                name: "icon_min";
                mouse_events: 0;
                clip_to: "whole";
                description
                {
                    state: "default" 0.0;
                    aspect: 0.655 1;
                    aspect_preference: VERTICAL;
                    rel1.to_y: "text.lowest";
                    rel1.relative: 0.2 0.0;
                    rel2.to_y: "text.lowest";
                    rel2.relative: 0.2 1.0;
                    image.normal: "icon_min.png";
                }
            }
            part
            {
                name: "text.lowest";
                type: TEXT;
                mouse_events: 0;
                clip_to: "whole";
                description
                {
                    state: "default" 0.0;
                    align: 0.0 0.0;
                    rel1.to_x: "icon_min";
                    rel1.relative: 1.0 0.65;
                    rel1.offset: 3 5;
                    rel2.relative: 1.0 0.65;
                    rel2.offset: 3 0;
                    text
                    {
                        text: "";
                        font: "Sans,Edje-Vera";
                        size: 10;
                        min: 1 1;
                        max: 1 1;
                        align: 0.0 0.5;
                    }
                }
            }/*text.lowest*/
            part
            {
                name: "icon_max";
                mouse_events: 0;
                clip_to: "whole";
                description
                {
                    state: "default" 0.0;
                    aspect: 0.655 1;
                    align: 0.5 0.0;
                    aspect_preference: VERTICAL;
                    rel1.to_y: "text.highest";
                    rel1.relative: 0.8 0.0;
                    rel2.to_y: "text.highest";
                    rel2.relative: 0.8 1.0;
                    image.normal: "icon_max.png";
                }
            }
            part
            {
                name: "text.highest";
                type: TEXT;
                mouse_events: 0;
                clip_to: "whole";
                description
                {
                    state: "default" 0.0;
                    align: 1.0 0.0;
                    rel1.relative: 0.0 0.65;
                    rel1.offset: -3 5;
                    rel2.to_x: "icon_max";
                    rel2.relative: 0.0 0.65;
                    rel2.offset: -3 0;
                    text
                    {
                        text: "";
                        font: "Sans,Edje-Vera";
                        size: 10;
                        min: 1 1;
                        max: 1 1;
                        align: 1.0 0.5;
                    }
                }
            }/*text.highest*/
	}/*parts*/

	programs
	{
		program
		{
			signal: "HIGH";
			source: "whole";
			action: STATE_SET "HIGH" 0.0;
    	    transition: SINUSOIDAL 1.0;
			target: "base";
		}
		program
		{
			signal: "LOW";
			source: "whole";
			action: STATE_SET "LOW" 0.0;
    	    transition: SINUSOIDAL 2.0;
			target: "base";
		}
        program
         {
            signal: "updated";
            source: "whole";
            action: STATE_SET "show" 0.0;
    	    transition: SINUSOIDAL 1.8;
            target: "update";
            after: "hover2";
         }
         program
         {
            name: "hover2";
            source: "whole";
            action: STATE_SET "default" 0.0;
            target: "update";
         }
        program
        {
	        signal: "mouse,clicked,1";
	        source: "title.text";
	        action: SIGNAL_EMIT "sensor.basic,cmnd" "";
        }
	}/*programs*/
}/*group widget/sensor/switch*/
