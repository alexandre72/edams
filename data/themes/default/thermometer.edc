        part
        {
            name: "cosm";
            type: IMAGE;
            mouse_events: 0;
            description
            {
		       rel1.relative: 0.0 0.0;
               rel2.relative: 1.0 1.0;
               align: 0.0 0.0;
               min: 50 25;
               max: 50 25;
               state: "default" 0.0;
               visible: 1;
               aspect: 1.0 1.0;
               image
               {
                  tween: "cosm_001.png";
