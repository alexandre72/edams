                  normal: "cosm_001.png";
               }
            }
            description
            {
               //the part is visible
               state: "cosm" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               color: 255 255 255 255;
            }
         }
        */
	}/*parts*/

	programs
	{
		program
        {
            name: "updated,start";
            signal: "updated";
            source: "whole";
            action: STATE_SET "show" 0.0;
			transition: SINUSOIDAL 3.0;
            target: "update";
            after: "hover2";
         }
         program
         {
            name: "hover2";
            source: "whole";
            action: STATE_SET "default" 0.0;
            target: "update";
         }
        program
        {
	        signal: "mouse,clicked,1";
	        source: "title.text";
	        action: SIGNAL_EMIT "sensor.basic,cmnd" "";
        }
      }/*programs*/
}/*group widget/sensor.basic/thermometer*/
