collection
{
   page
   {
      name: "main";
      version: 1;
      title: "Preferences";
      subtitle: "Example 01";
      widget: "elm/vertical_box";

      items {
         item
         {
            name: "cosmapikey_entry";
            type: TEXT;
            editable: 1;

            textarea
            {
               placeholder: "";
               default: "Cosm API key";
               deny: "^[0-9]*$";
            }
         }

         item
         {
            name: "mapfile_entry";
            type: TEXT;
            editable: 1;

            textarea
            {
               placeholder: "";
               default: "";
               deny: "^[0-9]*$";
            }
         }

           item
           {
            name: "softemu_checkb";
            type: BOOL;
            label: "Sofware serial emulation";
            bool
            {
               default: false;
            }
         }

           item
           {
            name: "hardemu_checkb";
            type: BOOL;
            label: "Hardware serial emulation(loopback)";

            bool
            {
               default: false;
            }
         }

           item
           {
            name: "debugprintf_checkb";
            type: BOOL;
            label: "Debug printf";

            bool
            {
               default: false;
            }
         }

         item
         {
            name: "sep";
            type: SEPARATOR;
         }

         item
         {
            name: "save";
            type: SAVE;
            label: "Save";
         }

         item
         {
            name: "reset";
            type: RESET;
            label: "Reset";
         }
      }
   }
}
